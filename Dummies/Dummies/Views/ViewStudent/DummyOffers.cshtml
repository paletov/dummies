@model IEnumerable<Dummies.Models.Student>


<h2 class="students-header">Оферти</h2>

<div>
    @{
        var grid = new WebGrid(Model, defaultSort: "Name");
    }

    @grid.GetHtml(columns:grid.Columns(
    grid.Column(
        "Оферта",
        format: @<text>@Html.ActionLink("Java Developer", "JavaDeveloper", "Student")</text>,
        style: "webgrid-column"
        ),
    grid.Column(
        "Фирма",
        format: @<text>@Html.ActionLink((string)item.Name, "BusinessProfile", "Student")</text>,
        style: "webgrid-column"
    ),
    grid.Column(
        "Брой оферти",
        format: @<text>@Html.Label("Брой оферти", "1")</text>,
        style: "webgrid-column"
          
    )),
    headerStyle: "webgrid-header",
    rowStyle: "webgrid-row-style",
    tableStyle: "webgrid",
    selectedRowStyle: "webgrid-selected-row"
    )
    
</div>

<div id="StudentDetailsPartial">

</div>

